<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndGameActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryVariant">

    <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        scrolling_image_view:contiguous="false"
        scrolling_image_view:source="@drawable/main_menu_background"
        scrolling_image_view:speed="15dp" />

    <LinearLayout
        android:id="@+id/llFirst"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/primary_color_rec"
        android:foreground="@drawable/gold_frame_rec"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/trophy" />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-Dr.saingrrer-"
            android:textColor="@color/gold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPoints1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-1234546-"
            android:textColor="@color/gold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThird"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/primary_color_rec"
        android:foreground="@drawable/bronze_frame_rec"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/llSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llFirst">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bronze_medal" />

        <TextView
            android:id="@+id/tvName3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-Dr.saingrrer-"
            android:textColor="@color/bronze"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPoints3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-1234546-"
            android:textColor="@color/bronze" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecond"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/primary_color_rec"
        android:foreground="@drawable/silver_frame_rec"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llThird"
        app:layout_constraintTop_toBottomOf="@+id/llFirst">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/silver_medal" />

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-Dr.saingrrer-"
            android:textColor="@color/silver"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPoints2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/unicorn_scribbles"
            android:gravity="center"
            android:maxLines="1"
            android:text="-1234546-"
            android:textColor="@color/silver" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBackToLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/unicorn_scribbles"
        android:shadowColor="@color/darkWhite"
        android:shadowDy="1.5"
        android:shadowRadius="1"
        android:text="Back to lobby"
        android:textColor="@color/colorOnPrimary"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToMainMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnToMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/unicorn_scribbles"
        android:shadowColor="@color/darkWhite"
        android:shadowDy="1.5"
        android:shadowRadius="1"
        android:text="Main Menu"
        android:textColor="@color/colorOnPrimary"
        android:textSize="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>