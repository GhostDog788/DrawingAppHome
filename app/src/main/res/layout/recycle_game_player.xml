<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/primary_color_rec"
    android:padding="8dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="MobDor"
        android:textDirection="rtl"
        android:fontFamily="@font/unicorn_scribbles"
        android:textColor="@color/darkWhite"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTwoDots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTwoDots"
        android:layout_width="10dp"
        android:layout_marginEnd="3dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:text=":"
        android:fontFamily="@font/unicorn_scribbles"
        android:textColor="@color/darkWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPoints"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeMinTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:textDirection="ltr"
        android:maxLines="1"
        android:text="5436233"
        android:fontFamily="@font/unicorn_scribbles"
        android:textColor="@color/darkWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivDrawerIcon"
        app:layout_constraintStart_toEndOf="@id/tvTwoDots"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDrawerIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/ic_brush"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPoints"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>